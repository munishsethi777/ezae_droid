<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.learntech.rights.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp"
            android:text="30/50\nScores Earned"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_profile_rank"/>
        <TextView
            android:id="@+id/textView_profile_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp"
            android:text="1\nProfile Rank"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_pending_trainings" />
        <TextView
            android:id="@+id/textView_pending_trainings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp"
            android:text="12\nPending Trainings"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_completed_trainings" />
        <TextView
            android:id="@+id/textView_completed_trainings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp"
            android:text="2\nCompltd Trainings"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <TextView
            android:id="@+id/textViewNotifications"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_light"
            android:padding="10dp"
            android:text="NOTIFICATIONS"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/textViewActiveLearningPlans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_light"
            android:padding="10dp"
            android:text="ACTIVE LEARNING PLANS"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewNotifications"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activePlansLayoutGroup1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/activePlansLayout1_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activePlansLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveLearningPlans">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarALP_1_1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:padding="10dp"
                    android:progress="50" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="50%"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewALP_1_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal"
                android:padding="5dp"
                android:text="New Induction Training in Hyderabad"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activePlansLayout1_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/activePlansLayout1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveLearningPlans">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarALP_1_1_3"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:padding="10dp"
                    android:progress="90" />

                <TextView
                    android:id="@+id/textView9_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="90%"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewALP_1_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="?attr/colorButtonNormal"
                android:padding="5dp"
                android:text="New Induction Training in Hyderabad"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activePlansLayoutGroup2"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activePlansLayoutGroup1">
        <LinearLayout
            android:id="@+id/activePlansLayoutGroup2Layout1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activePlansLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveLearningPlans">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarALP_1_1_2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:padding="10dp"
                    android:progress="35" />

                <TextView
                    android:id="@+id/textView9_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="35%"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewlp1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="?attr/colorButtonNormal"
                android:padding="5dp"
                android:text="New Induction Training in Hyderabad"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activePlansLayout2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/activePlansLayout1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveLearningPlans">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarALP_1_1_1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:padding="10dp"
                    android:progress="60" />

                <TextView
                    android:id="@+id/textView9_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="60%"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewlp2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="?attr/colorButtonNormal"
                android:padding="5dp"
                android:text="New Induction Training in Hyderabad"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
