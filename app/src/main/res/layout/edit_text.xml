<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_marginTop="6dp"  android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/border_green_right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="Email"
            android:textColor="@color/loginSignup11text" />
        <EditText
            android:id="@+id/editText_Text"
            style="@style/LoginSignUp2Input"
            android:hint="Email" />
    </LinearLayout>
</LinearLayout>