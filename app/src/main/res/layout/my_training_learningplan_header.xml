<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar_lp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:indeterminate="false"
                android:max="100"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:progress="50" />

            <TextView
                android:id="@+id/progressText_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="50%"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_learningPlanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="14sp"
                android:maxLines="2"
                android:text="NEW HIRE LEARNERS TRAINING WITH LATEST TECHNIQUES"
                android:textColor="@color/White"/>
            <TextView
                android:id="@+id/textView_lpTotalModules"
                android:layout_marginTop="6px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:text="12 Modules"
                android:textStyle="bold"
                android:textColor="@color/White"/>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>